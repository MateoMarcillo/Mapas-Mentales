#include <iostream>

int main() 
{
    float I, V, R;

    
    cout << "Ingrese la corriente (I) en amperios: "<<endl;
    cin >> I;
    cout << "Ingrese el voltaje  voltios: "<<endl;
    cin >> V;

    
    if (I = 0) 
        {
        R = V / I;
        double P1 = I * I * R;
        double P2 = V * V / R;

        
        cout << "Resistencia (R) calculada: " << R << " omnios" << endl;
       cout << "Potencia disipada usando P1 = I*I * R: " << P1 << " w" << endl;
       cout << "Potencia disipada usando P2 = V*V / R: " << P2 << " W" << endl;
    } else {
        cout << "La corriente no puede ser cero." <<endl;
    }

    return 0;
}
