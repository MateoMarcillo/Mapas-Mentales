#include <iostream>

int main() 
{
    float I, V, R;

    
    cout << "Ingrese la corriente (I) en amperios: ";
    cin >> I;
    cout << "Ingrese el voltaje (V) en voltios: ";
    cin >> V;

    
    if (I = 0) {
        R = V / I;
        double P1 = I * I * R;
        double P2 = V * V / R;

        
        cout << "Resistencia (R) calculada: " << R << " ohmios" << endl;
       cout << "Potencia disipada usando P1 = I*I * R: " << P1 << " vatios" << endl;
       cout << "Potencia disipada usando P2 = V*V / R: " << P2 << " vatios" << endl;
    } else {
        cout << "La corriente no puede ser cero." << std::endl;
    }

    return 0;
}
