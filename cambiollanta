#include <iostream>
using namespace std;

int main() {
  
    cout << "Pasos para cambiar una llanta:" << endl;
    cout << "1. Para el carrito en un lugar seguro." << endl;
    cout << "2. Pon el freno de mano." << endl;
    cout << "3. Coloca señales de seguridad." << endl;
    cout << "4. Quita los pernos de la llanta con una llave." << endl;
    cout << "5. Levanta el carrito con la gata." << endl;
    cout << "6. Quita la llanta dañada." << endl;
    cout << "7. Pon la nueva llanta y los pernos." << endl;
    cout << "8. Baja el carrito con la gata." << endl;
    cout << "9. Ajusta los pernos." << endl;
    cout << "10. Listo puede volver a rodar." << endl;

    return 0;
}
