#include <iostream>

using namespace std;

int main()

{
    float   promedio, P1,P2,P3;
    cout<<"ingrese el valor del parcial 1 (sobre 20 puntos)"<<endl;
    cin >> P1;
    cout <<"ingrese el valor del parcial 2 (sobre 20 puntos)"<<endl;
    cin >> P2;
    cout <<"ingrese el valor del parcial 3 (sobre 20 puntos)"<<endl;
    cin >> P3;
     promedio = (P1*0.35)+(P2*0.35)+ (P3*0.35);
    cout<<" promedio total es: "<< promedio<<endl;
    if ( promedio >= 14.01)
    {
        cout<<"Felicidades pasaste"<<endl;
    }
    else
    {
        cout<<"Mala suerte, tienes que repetir la materia"<<endl;

    }
    cout << "Mateo Marcillo!" << endl;
    return 0;
}

